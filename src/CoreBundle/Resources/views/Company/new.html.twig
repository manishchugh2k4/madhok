{% extends "CoreBundle::main-layout.html.twig" %}

{% block body %}
    <div id="content-wrapper">
        <div class="page-header">
            <div class="row">
                <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-plus-square page-header-icon"></i>&nbsp;&nbsp;Add Company Details</h1>
                <div class="col-xs-12 col-sm-8"></div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                {% if errors is defined and errors|length>0 %}
                    <div class="alert alert-danger">
                        <button type="button" class="close" data-dismiss="alert">Ã—</button>
                        <strong>Oops!</strong><br> 
                        {% for error in errors %}
                            {{ error.message }}<br>
                        {% endfor %}
                    </div>
                {% endif %}

                <div class="row">
                    <div class="col-sm-12">
                        <div class="panel-footer text-right">
                            <button class="submitFrm btn btn-primary">Save</button>
                            <button class="moveToList btn btn-default" id="{{ path('company_list') }}">Cancel</button>
                        </div>
                        {{ form_start(form, {attr: {id: 'editFrm', class: 'panel form-horizontal', novalidate: 'novalidate'}}) }}
                            <div class="panel-heading">
                                <span class="panel-title"><b>{{company.companyName}}</b></span>
                            </div>
                            <div class="panel-body">
                                <div class="row form-group">
                                    <label class="col-sm-4 control-label">{{ form_label(form.active) }}:</label>
                                    <div class="col-sm-8">
                                        {{ form_widget(form.active) }}&nbsp;&nbsp;
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="col-sm-4 control-label">{{ form_label(form.companyName) }}:</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.companyName) }}
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="col-sm-4 control-label">{{ form_label(form.contactPerson) }}:</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.contactPerson) }}
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="col-sm-4 control-label">{{ form_label(form.email) }}:</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.email) }}
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="col-sm-4 control-label">{{ form_label(form.address) }}:</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.address) }}
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="col-sm-4 control-label">{{ form_label(form.officeNo) }}:</label>
                                    <div class="col-sm-3">
                                        {{ form_widget(form.officeNo) }}
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="col-sm-4 control-label">{{ form_label(form.floorNo) }}:</label>
                                    <div class="col-sm-3">
                                        {{ form_widget(form.floorNo) }}
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="col-sm-4 control-label">{{ form_label(form.phone) }}:</label>
                                    <div class="col-sm-3">
                                        {{ form_widget(form.phone) }}
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="col-sm-4 control-label">{{ form_label(form.mobile) }}:</label>
                                    <div class="col-sm-3">
                                        {{ form_widget(form.mobile) }}
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="col-sm-4 control-label">{{ form_label(form.electricityPerUnit) }}:</label>
                                    <div class="col-sm-3">
                                        {{ form_widget(form.electricityPerUnit) }}
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="col-sm-4 control-label">{{ form_label(form.gstNo) }}:</label>
                                    <div class="col-sm-3">
                                        {{ form_widget(form.gstNo) }}
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="col-sm-4 control-label">{{ form_label(form.igstApplies) }}:</label>
                                    <div class="col-sm-3">
                                        {{ form_widget(form.igstApplies) }}
                                    </div>
                                </div>
                            </div>
                        {{ form_end(form) }}
                        <div class="panel-footer text-right">
                            <button class="submitFrm btn btn-primary">Save</button>
                            <button class="moveToList btn btn-default" id="{{ path('company_list') }}">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- / #content-wrapper -->
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function(){
            $('.switcher').switcher({ theme: 'square' });
            $('.submitFrm').on('click', function(){
                $('#editFrm').submit();
            })
            $('.moveToList').on('click', function(){
                window.location.href = $(this).attr('id')
            })
            $('.switcher-state-off').html('No')
            $('.switcher-state-on').html('Yes')
        });
    </script>
{% endblock %}