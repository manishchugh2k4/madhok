{% extends 'base.html.twig' %}

{% block body %}
    <h1>Companies list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Contactperson</th>
                <th>Companyname</th>
                <th>Address</th>
                <th>Officeno</th>
                <th>Floorno</th>
                <th>Phone</th>
                <th>Mobile</th>
                <th>Gstno</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td><a href="{{ path('company_show', { 'id': company.id }) }}">{{ company.id }}</a></td>
                <td>{{ company.contactPerson }}</td>
                <td>{{ company.companyName }}</td>
                <td>{{ company.address }}</td>
                <td>{{ company.officeNo }}</td>
                <td>{{ company.floorNo }}</td>
                <td>{{ company.phone }}</td>
                <td>{{ company.mobile }}</td>
                <td>{{ company.gstNo }}</td>
                <td>{% if company.active %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('company_show', { 'id': company.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('company_edit', { 'id': company.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('company_new') }}">Create a new company</a>
        </li>
    </ul>
{% endblock %}
